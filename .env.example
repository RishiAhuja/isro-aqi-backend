# =================================================================
# ISRO AQI Visualizer & Forecast App - Environment Variables
# =================================================================

# Database Configuration
# For Docker: postgresql://aqi_user:aqi_password@localhost:5432/aqi_database?schema=public
# For Render: You'll get this from Render PostgreSQL add-on
DATABASE_URL="postgresql://aqi_user:aqi_password@localhost:5432/aqi_database?schema=public"

# Server Configuration
PORT=5000
NODE_ENV=development

# =================================================================
# ðŸ”´ HUMAN INPUT REQUIRED: External API Keys
# =================================================================

# CPCB (Central Pollution Control Board) API
# Get from: https://app.cpcbccr.com/ccr/#/caaqm-dashboard-all/caaqm-landing
# Note: You need to register and get API access
CPCB_API_KEY="your_cpcb_api_key_here"
CPCB_BASE_URL="https://api.cpcbccr.com"

# Alternative AQI Data Sources (Optional)
# IQAir API: https://www.iqair.com/air-pollution-data-api
IQAIR_API_KEY="your_iqair_api_key_here"

# OpenWeatherMap Air Pollution API
# Get from: https://openweathermap.org/api/air-pollution
OPENWEATHER_API_KEY="your_openweather_api_key_here"

# =================================================================
# ðŸ”´ HUMAN INPUT REQUIRED: AI/ML Forecast APIs
# =================================================================

# Hugging Face API for AI forecasting
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY="your_huggingface_token_here"
HUGGINGFACE_MODEL_URL="https://api-inference.huggingface.co/models/your-model"

# =================================================================
# ðŸ”´ HUMAN INPUT REQUIRED: Firebase Configuration
# =================================================================

# Firebase Cloud Messaging (for push notifications)
# Get from: Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID="your_firebase_project_id"
FIREBASE_PRIVATE_KEY="your_firebase_private_key"
FIREBASE_CLIENT_EMAIL="your_firebase_client_email"
FIREBASE_SERVER_KEY="your_firebase_server_key"

# =================================================================
# Optional Configuration
# =================================================================

# Cron Job Settings
ENABLE_CRON_JOBS=true
AQI_FETCH_INTERVAL="0 */1 * * *"  # Every hour

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# =================================================================
# Production/Render Deployment Notes:
# =================================================================
# 1. DATABASE_URL will be automatically provided by Render PostgreSQL
# 2. Set NODE_ENV=production
# 3. Add all API keys in Render Environment Variables dashboard
# 4. Keep PORT as 5000 or use process.env.PORT
# =================================================================
